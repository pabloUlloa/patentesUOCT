<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="usach.uoct.patentesuoct.Vistas.Horario"
    tools:showIn="@layout/activity_horario"
    android:background="@mipmap/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unidad Operativa de Control de Tr치nsito"
        android:id="@+id/textView29"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/button28"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="clickHome"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuraci칩n"
            android:id="@+id/button29"
            android:layout_alignBottom="@+id/button28"
            android:layout_toRightOf="@+id/button28"
            android:layout_toEndOf="@+id/button28"
            android:onClick="clickConfiguracion"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F.A.Q"
            android:id="@+id/button30"
            android:layout_alignTop="@+id/button29"
            android:layout_toRightOf="@+id/button29"
            android:layout_toEndOf="@+id/button29"
            android:onClick="clickFAQ"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Situaci칩n Ambiente"
            android:id="@+id/button37"
            android:layout_alignTop="@+id/button30"
            android:layout_toRightOf="@+id/button30"
            android:layout_toEndOf="@+id/button30"
            android:onClick="clickSituacion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Horarios de Notificaci칩n"
            android:id="@+id/textView30"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/button37"
            android:layout_alignLeft="@+id/button29"
            android:layout_alignStart="@+id/button29" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por Defecto              "
            android:id="@+id/switch1"
            android:checked="false"
            android:layout_below="@+id/textView30"
            android:layout_alignLeft="@+id/switch2"
            android:layout_alignStart="@+id/switch2" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcional 1 - hh/mm"
            android:id="@+id/switch2"
            android:layout_below="@+id/switch1"
            android:layout_alignRight="@+id/button29"
            android:layout_alignEnd="@+id/button29"
            android:checked="false" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcional 2 - hh/mm"
            android:id="@+id/switch3"
            android:layout_below="@+id/switch2"
            android:layout_alignLeft="@+id/switch2"
            android:layout_alignStart="@+id/switch2"
            android:checked="false" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

        </RelativeLayout>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker"
            android:layout_marginTop="46dp"
            android:orientation="vertical"
            android:layout_below="@+id/switch3"
            android:layout_alignLeft="@+id/switch3"
            android:layout_alignStart="@+id/switch3" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker2"
            android:layout_alignTop="@+id/numberPicker"
            android:layout_alignRight="@+id/switch3"
            android:layout_alignEnd="@+id/switch3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Establecer"
            android:id="@+id/button38"
            android:layout_alignTop="@+id/numberPicker2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="52dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Opcional 2"
            android:id="@+id/textView31"
            android:layout_above="@+id/button38"
            android:layout_alignLeft="@+id/switch3"
            android:layout_alignStart="@+id/switch3"
            android:textColor="#010101" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   :"
            android:id="@+id/textView32"
            android:layout_alignBottom="@+id/button38"
            android:layout_toRightOf="@+id/numberPicker"
            android:layout_toEndOf="@+id/numberPicker"
            android:textColor="#060606" />

    </RelativeLayout>

</RelativeLayout>
